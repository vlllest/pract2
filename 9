#include <iostream>

using namespace std;

bool isPerfectNumber(int number) {
	int sum = 0;
	for (int i = 1; i < number; i++) {
		if (number % i == 0) {
			sum += i;
		}
	}

	return (sum == number);
}

int main() {
	setlocale(0, "");
	int number;
	cout << "Введите число: ";
	cin >> number;

	if (isPerfectNumber(number)) {
		cout << "Число " << number << " является совершенным" << endl;
	}
	else {
		cout << "Число " << number << " не является совершенным" << endl;
	}

	return 0;
}

